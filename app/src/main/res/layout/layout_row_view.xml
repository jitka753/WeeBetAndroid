<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="2sp"
    android:paddingLeft="5sp"
    android:paddingRight="5sp"
    android:paddingStart="5sp"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/title_contendentHome"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/title_contendentAway"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="#EFE9B5"
       >

        <TextView
            android:id="@+id/textview_list_contendentHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:gravity="center"
            tools:text="TextView"
            />

        <TextView
            android:id="@+id/textview_list_contendentAway"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:gravity="center"
            tools:text="TextView"
            />
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ListOdds"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>
    <!-- <ListView
        android:id="@+id/ListOdds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>-->
</LinearLayout>
